# Maintainer: Some One <some.one@some.email.com>

_realname=luarocks
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=1526.650755f
pkgrel=1
pkgdesc="Some package (mingw-w64)"
arch=('any')
url='https://www.somepackage.org/'
license=('LICENSE')
source=("${_realname}::git+https://github.com/keplerproject/${_realname}.git#branch=master"
        0010-fix-config.patch)
sha256sums=('SKIP'
            'SKIP')
depends=("${MINGW_PACKAGE_PREFIX}-lua")
makedepends=("${MINGW_PACKAGE_PREFIX}-lua")

pkgver() {
  cd "${srcdir}/${_realname}"
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd $srcdir/${_realname}
  patch -p1 -i ${srcdir}/0010-fix-config.patch
}

build() {
  cd "$srcdir"/${_realname}
  ./configure \
    --prefix=${MINGW_PREFIX} \
    --lua-version=5.3  \
    --with-lua-include=${MINGW_PREFIX}/include \
    --with-downloader=curl \
    --versioned-rocks-dir
  make
}

package() {
  cd "$srcdir"/${_realname}
  make DESTDIR="${pkgdir}" install
}
